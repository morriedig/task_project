<h1> Hello this is task page </h1>

<table>
  <thead>
    <tr>
      <td>任務</td>
      <td>任務內容</td>
      <td>任務狀態</td>
      <td>優先順係</td>
      <td>完成時間</td>
      <td>編輯</td>
      <td>刪除</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @task.title %></td>
      <td><%= @task.content %></td>
      <td><%= @task.status %></td>
      <td><%= @task.priority %></td>
      <td><%= @task.finish_time %></td>
      <td><%= link_to "編輯", edit_task_path(id: @task.id) %></td>
      <td><%= link_to "刪除", task_path(id: @task.id), method: :delete %></td>
    </tr>
  </tbody>
</table>

<%= link_to "回首頁", tasks_path %>