<% content_for :title do %>
  新增使用者資料
<% end %>
<%= render "partials/header" %>

<div class="container">
  <div class="back_btn_block">
    <%= link_to "註冊", new_user_path, class: "btn btn-primary" %>
  </div>
  
  <%= form_for(@user, url: "/admin/users" )do |user| %>
    <div class="form-group">
      <%= user.label :name, "使用者姓名" %>
      <%= user.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= user.label :role, "權限" %>
      <%= user.text_field :role, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= user.label :password, "密碼" %>
      <%= user.text_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= user.label :password_confirmation, "確認密碼" %>
      <%= user.text_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group submit_btn_block">
      <%= user.submit class: "btn btn-primary" %>    
    </div>
  <% end %>
</div>